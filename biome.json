{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "files": {
        "includes": [
            "**",
            "!.devcontainer",
            "!.github",
            "!.vscode",
            "!src/bulma.min.css",
            "!src-tauri"
        ]
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "linter": {
        "rules": {
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    },
    "formatter": {
        "useEditorconfig": true
    }
}
